{
  "name": "gradle-semantic-release-plugin",
  "version": "1.7.7",
  "description": "Automated release management for Gradle project",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/KengoTODA/gradle-semantic-release-plugin.git"
  },
  "keywords": [
    "semantic-release",
    "gradle"
  ],
  "files": [
    "README.md",
    "LICENSE",
    "lib"
  ],
  "author": "Kengo TODA",
  "license": "MIT",
  "private": false,
  "scripts": {
    "all": "npm pack && npm test",
    "prepack": "tsc",
    "test": "jest",
    "semantic-release": "semantic-release",
    "prepare": "husky install"
  },
  "dependencies": {
    "promisified-properties": "^2.0.27",
    "split2": "^4.1.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@types/rimraf": "^3.0.0",
    "@types/signale": "^1.2.1",
    "@types/split2": "^4.2.0",
    "husky": "^8.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^15.1.0",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "semantic-release": "^22.0.5",
    "ts-jest": "^27.0.3",
    "typescript": "^4.0.2"
  },
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "semantic-release": "^22.0.5"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "generateNotes": [
      "@semantic-release/release-notes-generator"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.ts": "prettier --write"
  },
  "funding": [
    {
      "type": "GitHub Sponsors",
      "url": "https://github.com/sponsors/KengoTODA"
    }
  ]
}
