{
  "name": "gradle-semantic-release-plugin",
  "version": "1.4.17",
  "description": "Automated release management for Gradle project",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/KengoTODA/gradle-semantic-release-plugin.git"
  },
  "keywords": [
    "semantic-release",
    "gradle"
  ],
  "files": [
    "README.md",
    "LICENSE",
    "lib"
  ],
  "author": "Kengo TODA",
  "license": "MIT",
  "private": false,
  "scripts": {
    "all": "npm pack && pretty-quick --staged && npm test",
    "prepack": "tsc",
    "test": "cross-env TS_NODE_FILES=true nyc mocha",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "promisified-properties": "^2.0.3",
    "split2": "^3.1.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/chai": "^4.2.8",
    "@types/mocha": "^8.0.0",
    "@types/rimraf": "^3.0.0",
    "@types/signale": "^1.2.1",
    "@types/split2": "^2.1.6",
    "chai": "^4.2.0",
    "cross-env": "^7.0.0",
    "husky": "^6.0.0",
    "mocha": "^8.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.1",
    "pretty-quick": "^3.0.0",
    "rimraf": "^3.0.0",
    "semantic-release": "^17.0.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "engines": {
    "node": ">=12.14"
  },
  "peerDependencies": {
    "semantic-release": "^17.0.1"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "generateNotes": [
      "@semantic-release/release-notes-generator"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "recursive": true,
    "spec": "test/src/*.test.ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": "src",
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
