{
  "name": "gradle-semantic-release-plugin",
  "version": "1.3.1",
  "description": "Automated release management for Gradle project",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/KengoTODA/gradle-semantic-release-plugin.git"
  },
  "keywords": [
    "semantic-release",
    "gradle"
  ],
  "files": [
    "README.md",
    "LICENSE",
    "lib"
  ],
  "author": "Kengo TODA",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "prebuild": "tslint -p tsconfig.json",
    "test": "jest",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "properties": "^1.2.1",
    "split2": "^3.1.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^6.0.1",
    "@semantic-release/npm": "^6.0.0",
    "@semantic-release/release-notes-generator": "^9.0.0",
    "@types/jest": "^25.1.0",
    "@types/rimraf": "^2.0.2",
    "@types/signale": "^1.2.1",
    "@types/split2": "^2.1.6",
    "husky": "^4.0.0",
    "jest": "^25.1.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^2.0.0",
    "rimraf": "^3.0.0",
    "semantic-release": "^16.0.1",
    "ts-jest": "^25.0.0",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.4000"
  },
  "engines": {
    "node": ">=10.16"
  },
  "peerDependencies": {
    "semantic-release": "^16.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/test/src/.*\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "generateNotes": [
      "@semantic-release/release-notes-generator"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
