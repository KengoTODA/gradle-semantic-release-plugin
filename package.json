{
  "name": "gradle-semantic-release-plugin",
  "version": "1.10.1",
  "description": "Automated release management for Gradle project",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/KengoTODA/gradle-semantic-release-plugin.git"
  },
  "keywords": [
    "semantic-release",
    "gradle"
  ],
  "files": [
    "README.md",
    "LICENSE",
    "lib"
  ],
  "author": "Kengo TODA",
  "license": "MIT",
  "private": false,
  "scripts": {
    "all": "npm pack && npm test",
    "prepack": "tsc",
    "test": "jest",
    "semantic-release": "semantic-release",
    "prepare": "husky"
  },
  "dependencies": {
    "promisified-properties": "^3.0.0",
    "split2": "^4.1.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/signale": "1.4.7",
    "@types/split2": "4.2.3",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.4",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "semantic-release": "24.2.9",
    "ts-jest": "29.4.5",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "semantic-release": "^24.0.0"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "generateNotes": [
      "@semantic-release/release-notes-generator"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.ts": "prettier --write"
  },
  "funding": [
    {
      "type": "GitHub Sponsors",
      "url": "https://github.com/sponsors/KengoTODA"
    }
  ]
}
